<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %>
<body>

    <%- include('./partials/header') %>


    <main class="main-register">
      
        <h2 class="titulo">
            Editar <%= producto.modelo %> 
        </h2>
        <form action="/products/<%= producto.id %>/edit?_method=PUT" method="POST">
            <section class="producto">

                <div class="nombre top">
                    <label class="label" for="modelo">Modelo:</label>
                    <input  type="text" name="modelo" id="control" value="<%= locals.oldData && oldData.modelo != "" ? oldData.modelo : producto.modelo%>">
                </div>
                <ul class="errorModelo"></ul>
                <% if (locals.errors && errors.modelo) { %>
                    <div class="texto-error-validacion">
                        <p><%= errors.modelo.msg %></p>
                    </div>
                <% } %>
                
                <div class="precio top">
                    <label class="label" for="precio">Precio:</label>
                    <input  type="number" name="precio" id="precio" value="<%= locals.oldData && oldData.precio != "" ? oldData.precio : producto.precio_unitario%>">
                </div>
                <ul class="errorPrecio"></ul>

                <% if (locals.errors && errors.precio) { %>
                    <div class="texto-error-validacion">
                        <p><%= errors.precio.msg %></p>
                    </div>
                <% } %>

                <%- include('./partials/selectEdit') %>
    
                
            </section>

            <section class="buttons">
                <button id="enviar" type="submit">Editar producto</button>
                <button id="borrar" type="reset">Resetear</button>
                <button type="menu">Volver</button>
            </section>
        </form>
        

</main>

<%- include('./partials/footer') %>
<script src="/js/editproductos.js"></script>
</body>
</html>