<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %>
<body>

    <%- include('./partials/header') %>


    <main class="main-register">
      
        <h2 class="titulo">
            CREAR PRODUCTO
        </h2>
        <form class='formu' action="">
            <section class="producto">
                <div class="nombre">
                    <label class="label" for="">Nombre</label>
                    <input required type="text" name="nombre" id="" class="control">
                </div>
                <div class="precio">
                    <label class="label" for="">Precio</label>
                    <input required type="text" name="apellido" id="" class="control">
                </div>
                <div class="descripcion" >
                    <label class="label" for="">Descripcion</label>
                    <input required type="text" name="correo" id="" class="control">
                </div>
            </section>

            <section class="pass">
                <div class="Tdetalle">
                    <label class="label" for="">Titulo detalle</label>
                    <input required type="text" name="nombre" id="" class="control">
                </div>
                <div class="detalle">
                    <label class="label" for="">Detalle</label>
                    <textarea class="area" name="textarea" ></textarea>
                </div>
                <div class="foto">
            
                    <label for="foto">Foto</label>
                    <input type="file" id="foto" name="foto" placeholder="foto">
            
                </div>
                
            </section>

            


            <section class="buttons">
                <button id="enviar" type="submit">Crear producto</button>
                <button id="borrar" type="reset">Resetear</button>
                <button type="menu">Volver</button>
            </section>
        </form>
        

</main>

<%- include('./partials/footer') %>

</body>
</html>