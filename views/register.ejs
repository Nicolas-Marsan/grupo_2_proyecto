<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %>

    <%- include('./partials/header') %>


        <main class="main-register">

                <h2 class="titulo">
                    CREÁ TU CUENTA
                </h2>
                <form action="">
                    <section class="datos-personales">
                        <div class="div-nombre">
                            <label class="label" for="nombre">Nombre</label>
                            <input required type="text" name="nombre" id="nombre" class="control">
                        </div>
                        <div class="div-apellido">
                            <label class="label" for="apellido">Apellido</label>
                            <input required type="text" name="apellido" id="apellido" class="control">
                        </div>
                        <div class="div-correo" >
                            <label class="label" for="correo">Correo electrónico</label>
                            <input required type="email" name="correo" id="correo" class="control">
                        </div>
                    </section>
    
                    <section class="pass">
                            <div class="div-pass">
                                <label class="label" for="pass">Contraseña</label>
                                <input required type="password" name="pass" id="pass" class="control"><i class="fas fa-eye-slash"></i>
                            </div>
                            <div class="div-confirm-pass"> 
                                <label class="label" for="pass2">Confirmar contraeña</label>
                                <input required type="password" name="pass2" id="pass2" class="control"><i  id="i" class="fas fa-eye-slash"></i>
                            </div>
                            </div>
                    </section>
    
    
                    <section class="terminos-condiciones">
                        <div class="div-informacion">
                            <input class="cbx" type="checkbox" name="información" id="newletter">
                            <label for="newletter">Deseo recibir información sobre nuevos productos.</label>
                        </div>
                        <div class="div-terminos">
                            <input required class="cbx" type="checkbox" name="terminos" id="terminos">
                            <label for="terminos">He leído y acepto los <a href="#">Términos y Condiciones</a>.</label>
                        </div>
                    </section>
    
    
                    <section class="buttons">
                        <button id="enviar" type="submit">Crear cuenta</button>
                        <button type="menu">Volver</button>
                    </section>
                </form>
                

        </main>

        <%- include('./partials/footer') %>

</html>