                    <li><a href="#">MI CARRITO</a></li>
                    <li><a href="#">CAMBIOS Y DEVOLUCIONES</a></li>
                </ul>
            </section>
    
            <section class="navegacion">
                <h3 class="titulos">NAVEGACIÓN</h3>
                <ul>
                    <li><a href="#">INICIO</a></li>
                    <li><a href="#">PRODUCTOS</a></li>
                    <li><a href="#">CONTACTO</a></li>
                </ul>
            </section>
    
